<div>
  <h1 class="text-center mt-5 mb-5">All Carts</h1>
  <div class="w-75 m-auto">
    <table class="table table-sm table-bordered table-dark w-60%">
      <thead>
        <tr>
          <th scope="col">Index carrito</th>
          <th scope="col">Id Carrito</th>
          <th scope="col">Ver Carrito</th>
        </tr>
      </thead>
      <tbody>
        {{#each carts}}
          <tr>
            <td>{{@index}}</td>
            <td>{{_id}}</td>
            <td>
              <button class="btn btn-primary check-button" data-_id="{{_id}}">Ver</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>


  <script>

  function checkCart () {
    const button = event.target 
    const id = button.dataset._id 
    window.location.replace(`http://localhost:3000/cart/${id}`);
  }

  const checkButtons = document.querySelectorAll('.check-button')
  checkButtons.forEach(button => { 
    button.addEventListener('click', checkCart) 
  }) 

  </script>