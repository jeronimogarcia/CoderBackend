<style>
  .formDisplay {
    display: none;
  }
</style>

<div>
  <h1 class="text-center mt-5 mb-5">Cart</h1>
  <div class="w-75 m-auto">
    <table class="table table-sm table-bordered table-dark w-60%">
      <thead>
        <tr>
          <th scope="col">Id Producto</th>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Quantity</th>
          <th scope="col">Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{product._id}}</td>
            <td>{{product.title}}</td>
            <td>${{product.price}}</td>
            <td>{{quantity}}</td>
             <td>
              <button class="btn btn-primary edit-button" data-_id="{{_id}}">EDIT</button>
              <button class="btn btn-danger delete-button" data-_id="{{_id}}">DELETE</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center">
   <button class="btn btn-danger w-75" id="delete-cart">Delete Cart</button>
  </div>

  <div class="w-75 m-auto formDisplay" id="edit-Form">
    <h1 class="text-center mt-5 mb-2">Editar producto</h1>
    <form id="formProducto">
      <div class="mb-3">
        <label class="form-label">Id Producto</label>
        <input type="text" class="form-control" id="editId" />
      </div>
      <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" id="editQuantity" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </div>
    </form>
  </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
<script>
  const ws = io('ws://localhost:8000'); 
  const updateForm = document.getElementById('edit-Form');
  const idEditInput = document.getElementById('editId'); 
  const quantityEditInput = document.getElementById('editQuantity'); 
  const deleteButtonCart = document.getElementById('delete-cart')
  let targetEditId = ''

  function deleteProduct(event) { 
    const currentUrl = window.location.pathname.split('/');
    const cartId = currentUrl[3]
    const button = event.target 
    const productId = button.dataset._id 
    ws.emit('deleteProduct', cartId, productId) 
  } 

  function editForm(event) {
    toogleEditForm()
    const _id = event.target.getAttribute('data-_id');
    targetEditId = _id
  } 

  function toogleEditForm() {
    const editForm = document.getElementById('edit-Form')
    editForm.classList.toggle('formDisplay');
  }

  function deleteAllCart() {
    const currentUrl = window.location.pathname.split('/');
    const cartId = currentUrl[3]
    ws.emit('deleteAllCart', cartId);
  }

  deleteButtonCart.addEventListener('click', deleteAllCart)

  const deleteButtons = document.querySelectorAll('.delete-button')
  deleteButtons.forEach(button => { 
    button.addEventListener('click', deleteProduct) 
  }) 

  const editButtons = document.querySelectorAll('.edit-button')
  editButtons.forEach(button => { 
    button.addEventListener('click', editForm) 
  })

  updateForm.addEventListener('submit', function(e) {
    e.preventDefault(); 
    const currentUrl = window.location.pathname.split('/');
    const cartId = currentUrl[3]
    const updatedProduct = {
      id: idEditInput.value, 
      quantity: quantityEditInput.value, 
    }
    const productId = targetEditId
    ws.emit('updateProductCart', cartId, productId, updatedProduct);
  })

  ws.on('updateCartTable', function(newList) { 
   location.reload() 
  })

  ws.on('redirect', function(newList) { 
   window.location.replace('http://localhost:3000/api/carts/allCarts');
  })
</script>